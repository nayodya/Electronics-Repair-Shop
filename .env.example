# Electronics Repair Shop - Jenkins Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# GitHub Configuration
# ============================================
GITHUB_USERNAME=your-github-username
GITHUB_TOKEN=your-github-personal-access-token
GIT_EMAIL=your-email@example.com
GIT_NAME="Your Name"

# ============================================
# Docker Registry Configuration
# ============================================
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-docker-username
DOCKER_PASSWORD=your-docker-password
DOCKER_IMAGE_TAG=latest

# ============================================
# Database Configuration
# ============================================
SA_PASSWORD=YourStrong@Passw0rd
DB_NAME=ElectronicsRepairShop
POSTGRES_PASSWORD=sonar
POSTGRES_USER=sonar

# ============================================
# SonarQube Configuration
# ============================================
SONARQUBE_HOST_URL=http://localhost:9000
SONARQUBE_TOKEN=your-sonarqube-token
SONARQUBE_WEBHOOK_SECRET=your-webhook-secret
SONARQUBE_PROJECT_KEY=electronics-repair-shop

# ============================================
# Jenkins Configuration
# ============================================
JENKINS_URL=http://localhost:8080
JENKINS_ADMIN_USER=admin
JENKINS_ADMIN_PASSWORD=AdminPassword123

# ============================================
# Slack Configuration (Optional)
# ============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#jenkins-notifications
SLACK_USERNAME=Jenkins-Bot

# ============================================
# Email Configuration (Optional)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=jenkins@electronicsrepairshop.com
EMAIL_TO=devops@electronicsrepairshop.com

# ============================================
# AWS Configuration (If using AWS)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_ECR_REGISTRY=your-account-id.dkr.ecr.us-east-1.amazonaws.com

# ============================================
# Azure Configuration (If using Azure)
# ============================================
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_RESOURCE_GROUP=electronics-repair-shop
AZURE_REGISTRY_URL=your-registry.azurecr.io

# ============================================
# Kubernetes Configuration
# ============================================
KUBE_CONTEXT=minikube
KUBE_NAMESPACE=ers-backend
KUBE_CONFIG_PATH=$HOME/.kube/config

# ============================================
# Application Configuration
# ============================================
ASPNETCORE_ENVIRONMENT=Development
VITE_API_URL=http://localhost:5062
NODE_ENV=development

# ============================================
# Quality Gate Thresholds
# ============================================
MIN_CODE_COVERAGE=70
MAX_LINT_WARNINGS=50
MAX_VULNERABILITIES=0

# ============================================
# Build Configuration
# ============================================
DOTNET_VERSION=8.0
NODE_VERSION=20
BUILD_TIMEOUT=3600

# ============================================
# Deployment Configuration
# ============================================
DEPLOYMENT_ENVIRONMENT=development
DEPLOY_TIMEOUT=600
HEALTH_CHECK_TIMEOUT=300

# ============================================
# Monitoring Configuration
# ============================================
GRAFANA_ADMIN_PASSWORD=AdminPassword123
PROMETHEUS_RETENTION=30d

# ============================================
# Feature Flags
# ============================================
SKIP_TESTS=false
SKIP_SECURITY_SCAN=false
SKIP_DEPLOYMENT=false
ENABLE_NOTIFICATIONS=true
ENABLE_MONITORING=true

# ============================================
# Advanced Configuration
# ============================================
JENKINS_AGENTS=1
PARALLEL_BUILD_THREADS=4
LOG_LEVEL=INFO
DEBUG_MODE=false
